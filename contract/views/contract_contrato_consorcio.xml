<odoo>
  <data>

    <!-- ACTIONS OPENING VIEWS ON MODELS -->
    <record model="ir.actions.act_window" id="contrato_consorcio_action_window">
      <field name="name">Consortium</field>
      <field name="res_model">contract.contrato_consorcio</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- ACTIONS -->
    <menuitem name="Consortium" id="contrato_consorcio_menu_1_list" parent="account.menu_finance_payables" action="contrato_consorcio_action_window" />


    <!-- EXPLICIT LIST VIEW DEFINITION -->
    <record model="ir.ui.view" id="contrato_consorcio_list">
      <field name="name">Consortium Agreement List</field>
      <field name="model">contract.contrato_consorcio</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="cd_descricao" />
          <field name="cd_ativo" widget="boolean_toggle" />
        </tree>
      </field>
    </record>

    <!-- EXPLICIT FORM VIEW DEFINITION -->
    <record model="ir.ui.view" id="contrato_consorcio_form">
      <field name="name">Consortium Agreement Form</field>
      <field name="model">contract.contrato_consorcio</field>
      <field name="arch" type="xml">
        <form>

          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>
            <group>
              <field name="cd_descricao" />
              <field name="cd_ativo" widget="boolean_toggle" />
            </group>
            <notebook>
              <page string="Fornecedores">
                <field name="contratos" />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- SEQUENCIA PARA CONTRATO CONSORCIO -->
    <record model="ir.sequence" id="contrato_consorcio_linha_id">
      <field name="name">Consortium Sequece</field>
      <field name="code">contract.contrato_consorcio</field>
      <field name="prefix"></field>
      <field name="suffix"></field>
      <field name="number_next">1</field>
      <field name="padding">10</field>
    </record>

  </data>
</odoo>
