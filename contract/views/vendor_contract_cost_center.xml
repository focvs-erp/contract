
<odoo>
    <record id="cost_center_view" model="ir.ui.view">
        <field name="name">vendor.contract.cost.center</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract_contract_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='user_id']" position="after">
                <field name="cost_center_id" string="Cost Center" />
            </xpath>
        </field>
    </record>

    <record id="cost_center_tree_view" model="ir.ui.view">
        <field name="name">vendor.contract.cost.center</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract_contract_tree_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='date_end']" position="after">
                <field name="cost_center_id" string="Cost Center" />
            </xpath>
        </field>
    </record>

</odoo>