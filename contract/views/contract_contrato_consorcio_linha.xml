<odoo>
  <data>

    <!-- ACTIONS OPENING VIEWS ON MODELS -->
    <record model="ir.actions.act_window" id="contrato_consorcio_linha_action_window">
      <field name="name">Consortium Agreement Line</field> 
      <!-- Contrato ConsÃ³rcio Linha -->
      <field name="res_model">contract.contrato_consorcio_linha</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- EXPLICIT LIST VIEW DEFINITION -->
    <record model="ir.ui.view" id="contrato_consorcio_linha_list">
      <field name="name">Consortium Agreement Line List</field>
      <field name="model">contract.contrato_consorcio_linha</field>
      <field name="arch" type="xml">
        <tree editable="bottom">
          <field name="cd_fornecedores" required="1" />
          <field name="cd_contato" />
          <field name="cd_email" />
          <field name="cd_telefone" />
          <field name="cd_participacao" />
          <field name="cd_ativo" widget="boolean_toggle" />
        </tree>
      </field>
    </record>

    <!-- EXPLICIT FORM VIEW DEFINITION -->
    <record model="ir.ui.view" id="contrato_consorcio_linha_form">
      <field name="name">Consortium Agreement Line Form</field>
      <field name="model">contract.contrato_consorcio_linha</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="cd_fornecedores" required="1" />
            <field name="cd_contato" />
            <field name="cd_email" />
            <field name="cd_telefone" />
            <field name="cd_participacao" />
            <field name="cd_ativo" widget="boolean_toggle" />
          </group>
        </form>
      </field>
    </record>

    <!-- SEQUENCIA PARA CONTRATO CONSORCIO LINHA -->
    <record model="ir.sequence" id="contrato_consorcio_id">
      <field name="name">Consortium Line Sequece</field>
      <field name="code">contract.contrato_consorcio_linha</field>
      <field name="prefix"></field>
      <field name="suffix"></field>
      <field name="number_next">1</field>
      <field name="padding">10</field>
    </record>

  </data>
</odoo>