<odoo>
     <record id="view_fatura_consorcio" model="ir.ui.view">
      <field name="name">Consortium Invoice</field>
      <field name="model">contract.fatura_consorcio</field>
      <field name="arch" type="xml">
        <form string="fatura_consorcio">
            <field name="cd_fornecedor" />
            <field name="cd_produto" />"
            <field name="cd_unidade_medida" />
            
            <field name="total_completed" readonly="1"/>
            <field name="value_available_finish" readonly="1"/>
            <field name="balance_percentage" readonly="1"/>
            <field name="data_recebimento" />
            <!-- <field name="cd_contrato"/> -->
      </form>
   </field>
  </record>

    <record id="view_fatura_consorcio_tree" model="ir.ui.view">
      <field name="model">contract.fatura_consorcio</field>
      <field name="arch" type="xml">
        <tree string="Consortium Invoice" multi_edit="1" editable="top" create="false" delete="false">
            <field name="cd_fornecedor" />
            <field name="cd_produto" />
            <field name="cd_unidade_medida" />
            <field name="total_completed" readonly="1"/>
            <field name="value_available_finish" readonly="1"/>
            <field name="balance_percentage" readonly="1"/>
            <field name="data_recebimento" />


        </tree>
      </field>
    </record>

    <record id="account_fatura_consorcio_window" model="ir.actions.act_window">
      <field name="name">Consortium Invoice</field>
      <field name="res_model">contract.fatura_consorcio</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_id" ref="view_fatura_consorcio_tree"/>
    </record>
</odoo>
